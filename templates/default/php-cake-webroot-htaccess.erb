<IfModule mod_rewrite.c>
  RewriteEngine On

  RewriteBase <%= node['deploy-project']['php-cake']['base']; %>

  <% unless node['deploy-project']['php-oc']['redirect'].nil? %>
      RewriteCond %{HTTP_HOST} !^<%= Regexp.escape(node['deploy-project']['php-cake']['redirect']) %> [NC]
      RewriteRule ^(.*)$ http://<%= node['deploy-project']['php-cake']['redirect'] %> [R=301,L]
  <% end %>

  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>
